{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
section {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 20px;
}

button {
    font-weight: bold !important;
    color: white !important;
    border: 2px solid black !important;
}

#blue button {
    background-color: blue;
}

#green button {
    background-color: green;
}
label {
  padding-right: 0.5rem;
  padding-left: 1em;
}
</style>
    <h1>{{ h1 }}</h1>


    {{ form_start(form) }}
    <div class="row">
    {{ form_row(form.year, {'label': 'Elige año:'})}}
    </div>
    <h2>Resúmenes presupuestarios</h2>
    <section id="blue">
    {% for item in REPORTS.blue %}
        {# dump(item)#}
        <button class="btn" name="report[]" value="{{ item.path }}">{{ item.title }}</button>
    {% endfor %}
    </section>
    <hr>
    <h2>El papel del sector privado</h2>
    <section id="green">
    {% for item in REPORTS.green %}
        {# dump(item)#}
        <button class="btn" name="report[]" value="{{ item.path }}">{{ item.title }}</button>
    {% endfor %}
    </section>
    {{ form_end(form)}}
{% endblock %}
