<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{ asset('components/css/bootstrap.css') }}" />
        {% endblock %}
    </head>

    <body>
      {% block flashes %}
        {# read and display just one flash message type #}
        {% for message in app.flashes('notice') %}
            <div class="alert alert-notice">
                {{ message }}
            </div>
        {% endfor %}

        {# read and display several types of flash messages #}
        {% for label, messages in app.flashes(['success', 'warning']) %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
      {% endblock %}
      <header class="navbar navbar-expand navbar-dark flex-column flex-md-row bd-navbar">
        {# Start left side #}
        {% set liclass = "nav-item" %}{% set aclass = "nav-link" %}
        <div class="navbar-nav-scroll">
          <ul class="navbar-nav bd-navbar-nav flex-row">
            {{ include('menu-left.html.twig') }}
          </ul>
        </div>
        {# End left side #}
        {# Start right side #}
        <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
          <li class="nav-item dropdown">
            {{ include('menu-right.html.twig') }}
          </li>
        </ul>
        {# End right side #}
      </header>

    {# Una vez acabo el header, container-fluid hasta el final del body #}
    <div class="container-fluid">
        {% block body %}{% endblock %}
    </div>
      {% block javascripts %}
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="{{ asset('components/jquery.slim.js') }}"></script>
        <!-- The bootstrap bundle includes the optional popper.js -->
        <script src="{{ asset('components/js/bootstrap.bundle.min.js') }}"></script>
        {# encore_entry_script_tags('app') #}
      {% endblock %}
    </body>
</html>
