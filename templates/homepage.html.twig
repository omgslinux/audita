{% extends 'base.html.twig' %}

{% block body %}


<style>
.dashboard {
    width: 500px;
    height: 600px;
    border-radius: 10px;
    gap: 20px;
}
.item {
    display: flex;
    list-style: none;
    align-items: center;
    justify-content: space-evenly;
    width: inherit;
    padding: 40px;
}
#roleadmin {
    background-color: red;
    border-radius: inherit;
}
#rolemanager {
    background: green;
    border-radius: inherit;
}
#roleuser {
    background: orange;
    border-radius: inherit;
}
</style>
    <div class="dashboard d-flex flex-column">
        {% if is_granted('ROLE_ADMIN') %}
        <div id="rolemanager" class="item">
            <li>
                <a class="btn btn-primary" href="{{ path('admin_user_index') }}">
                {% trans %}Users{% endtrans %}
                </a>
            </li>
        </div>
        {% set tagPrefix = 'edit' %}
        {% set modalId = 'users' %}
        {% set modalSize, included = 'modal-md', 'user/_pass' %}
        {# include('_modal.html.twig', {
          'nobutton': true,
          'form': user_form,
          })
        #}

        {% endif %}
    </div>
{% endblock %}
